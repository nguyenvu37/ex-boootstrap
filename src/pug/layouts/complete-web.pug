// Main page Heading

include ../partials/mixin
.container
    .row
        .col-12.text-center.mt-5
            h1.display-4.pt-4 Complete Website
            .border-top.border-dark.w-50.mx-auto.my-3
            p.lead Built with HTML, CSS &amp; Bootstrap

    // Three Column Section
    .row.justify-content-center.my-5.text-center
        +stack('fa-html5', 'HTML5', 'color: #dd4d26')
        +stack('fa-bootstrap', 'BOOTSTRAP', 'color: #563d7c')
        +stack('fa-css3-alt', 'CSS3', 'color: #026db6')

// Border top
.border-top.border-dark.w-100.mx-auto.my-3

// Two Column Section
+two-column('The 12 Website Bundle Pack', '../../../assets/img/tablet.png')

// Border top
.border-top.border-dark.w-100.mx-auto

// Fixed Background IMG
.fixed-background
    .fixed-wrap
        .fixed

// Bundle Pack Jumbotron
+sticky('sticky-top mb-1','Responsive bundle pack of complete websites!','Check of the website')

// Three column section
.container
    .row.justify-content-center.my-5.text-center
        +web-design('The Agency Website', '../../../assets/img/agency.png')
        +web-design('The Business Website', '../../../assets/img/business.png')
        +web-design('The Parallax Website', '../../../assets/img/parallax.png')

// Border top
.border-top.border-dark.w-100.mx-auto.my-3

// Two Column section
+two-column('The Complete Responsive Website', '../../../assets/img/responsive.png')

// Border top
.border-top.border-dark.w-100.mx-auto.my-3


