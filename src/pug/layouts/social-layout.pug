// Start Social Jumbotron

.social-media-sticky
    .jumbotron.sticky-top
        .container
            .row.justify-content-center.text-center
                .d-none.d-xl-block.col-xl-6.pt-1
                    h3 Connect with us on social media!
                .col-sm-10.col-md-8.col-lg-7.col-xl-6.pt-1
                    ul.social
                        each item in listSocial
                            li
                                a(href="" target="_blank")
                                    i(class=item.className style=`color: ${item.color}`)